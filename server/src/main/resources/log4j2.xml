<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="MainConfig" status="WARN" monitorInterval="5">
    <Appenders>
        <Console name="SysOut" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{[%d{HH:mm:ss}] [%t/%level]}{FATAL=bright red, ERROR=red, INFO=bright_white, DEBUG=bright white, TRACE=bright blue} %style{(%C{1})}{Blue}: %highlight{%msg%throwable%n}{FATAL=bright red, ERROR=red, INFO=bright_white, DEBUG=bright white, TRACE=bright blue}" />
        </Console>
        <RollingRandomAccessFile name="File" fileName="${sys:user.home}/.khhs/net/minecraftnt/logs/latest.log" filePattern="${sys:user.home}/.khhs/minecraft/logs/%d{yyyy-MM-dd}-%i.log.zip">
            <PatternLayout pattern="[%d{HH:mm:ss}] [%t/%level] (%C{1}): %msg%n" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <OnStartupTriggeringPolicy />
            </Policies>
        </RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="SysOut"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>